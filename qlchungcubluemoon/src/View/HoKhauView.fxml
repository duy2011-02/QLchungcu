<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/page.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.HoKhauController">

    <children>

        <!-- Background -->
        <AnchorPane layoutX="6.0" layoutY="5.0" prefHeight="670.0" prefWidth="900.0" styleClass="background">
            <children>

                <!-- Search Bar -->
                <Label layoutX="50.0" layoutY="10.0" text="Tìm kiếm:" >
                    <font><Font name="Segoe UI" size="16"/></font>
                </Label>
                <TextField fx:id="searchbar" layoutX="160.0" layoutY="8.0" prefHeight="28.0" prefWidth="620.0" promptText="Search..." />
                <ImageView fitHeight="23.0" fitWidth="28.0" layoutX="790.0" layoutY="8.0"
                           pickOnBounds="true" preserveRatio="true">
                    <image><Image url="@../image/search_icon.png"/></image>
                </ImageView>

                <!-- TableView Hộ Khẩu -->
                <TableView fx:id="householdTableView" layoutX="50.0" layoutY="45.0" prefHeight="220.0" prefWidth="1138.0"
                           styleClass="table">
                    <columns>
                        <TableColumn fx:id="maHKCol" prefWidth="120.0" text="Mã hộ khẩu"/>
                        <TableColumn fx:id="diaChiCol" prefWidth="250.0" text="Địa chỉ"/>
                        <TableColumn fx:id="ngayLapCol" prefWidth="150.0" text="Ngày lập"/>
                        <TableColumn fx:id="ngayChuyenDiCol" prefWidth="200.0" text="Ngày chuyển đi"/>
                        <TableColumn fx:id="lyDoChuyenCol" prefWidth="420.0" text="Lý do chuyển"/>
                    </columns>
                </TableView>

                <!-- Nút Xóa Hộ Khẩu nằm ngay dưới table -->
                <Button layoutX="50.0" layoutY="275.0" prefHeight="28.0" prefWidth="200.0" text="Xóa hộ khẩu"
                        onAction="#deleteHoKhauOnAction"
                        style="-fx-background-color: #9900ff; -fx-background-radius: 5px;">
                    <cursor><Cursor fx:constant="HAND"/></cursor>
                </Button>

                <!-- Form Thêm Hộ Khẩu -->
                <AnchorPane layoutX="50.0" layoutY="320.0" prefHeight="200.0" prefWidth="550.0" styleClass="form">
                    <children>
                        <Label alignment="CENTER" layoutY="0.0" prefHeight="28.0" prefWidth="550.0" text="Thêm hộ khẩu mới" textAlignment="CENTER">
                            <font><Font name="Segoe UI" size="16"/></font>
                        </Label>

                        <Label layoutX="10.0" layoutY="40.0" prefHeight="28.0" prefWidth="200.0" text="Mã hộ khẩu       :">
                            <font><Font name="Segoe UI" size="14"/></font>
                        </Label>
                        <TextField fx:id="addMaHoKhauText" layoutX="230.0" layoutY="40.0" prefHeight="28.0" prefWidth="200.0" promptText="Ví dụ: HK001">
                            <font><Font name="Segoe UI" size="14"/></font>
                        </TextField>

                        <Label layoutX="10.0" layoutY="80.0" prefHeight="28.0" prefWidth="200.0" text="Địa chỉ              :">
                            <font><Font name="Segoe UI" size="14"/></font>
                        </Label>
                        <TextField fx:id="addDiaChiText" layoutX="230.0" layoutY="80.0" prefHeight="28.0" prefWidth="200.0" promptText="Ví dụ: đường ABC, ngõ D">
                            <font><Font name="Segoe UI" size="14"/></font>
                        </TextField>

                        <Label layoutX="10.0" layoutY="120.0" prefHeight="28.0" prefWidth="200.0" text="Ngày lập           :">
                            <font><Font name="Segoe UI" size="14"/></font>
                        </Label>
                        <DatePicker fx:id="addNgayLap" layoutX="230.0" layoutY="120.0" prefHeight="28.0" prefWidth="200.0" />

                        <Label layoutX="10.0" layoutY="160.0" prefHeight="28.0" prefWidth="200.0" text="Ngày chuyển đi :">
                            <font><Font name="Segoe UI" size="14"/></font>
                        </Label>
                        <DatePicker fx:id="addNgayChuyenDi" layoutX="230.0" layoutY="160.0" prefHeight="28.0" prefWidth="200.0" />

                        <Label layoutX="10.0" layoutY="200.0" prefHeight="28.0" prefWidth="200.0" text="Lý do chuyển    :">
                            <font><Font name="Segoe UI" size="14"/></font>
                        </Label>
                        <TextField fx:id="addLyDoChuyenText" layoutX="230.0" layoutY="200.0" prefHeight="28.0" prefWidth="200.0" promptText="Ví dụ: Công việc">
                            <font><Font name="Segoe UI" size="14"/></font>
                        </TextField>

                        <Button layoutX="230.0" layoutY="240.0" prefHeight="28.0" prefWidth="200.0" text="Thêm hộ khẩu" onAction="#addHoKhauOnAction"
                                style="-fx-background-color: #5DADE2; -fx-background-radius: 5px;">
                            <cursor><Cursor fx:constant="HAND"/></cursor>
                        </Button>
                    </children>
                </AnchorPane>

                <!-- Form Cập Nhật Hộ Khẩu -->
                <AnchorPane layoutX="650.0" layoutY="320.0" prefHeight="200.0" prefWidth="550.0" styleClass="form">
                    <children>
                        <Label alignment="CENTER" layoutY="0.0" prefHeight="28.0" prefWidth="550.0" text="Cập nhật hộ khẩu" textAlignment="CENTER">
                            <font><Font name="Segoe UI" size="16"/></font>
                        </Label>

                        <Label layoutX="10.0" layoutY="40.0" prefHeight="28.0" prefWidth="200.0" text="Mã hộ khẩu       :">
                            <font><Font name="Segoe UI" size="14"/></font>
                        </Label>
                        <ComboBox fx:id="updateMaHoKhauCBox" layoutX="230.0" layoutY="40.0" prefHeight="28.0" prefWidth="200.0" promptText="Chọn mã hộ khẩu" />

                        <Label layoutX="10.0" layoutY="80.0" prefHeight="28.0" prefWidth="200.0" text="Địa chỉ              :">
                            <font><Font name="Segoe UI" size="14"/></font>
                        </Label>
                        <TextField fx:id="updateDiaChiText" layoutX="230.0" layoutY="80.0" prefHeight="28.0" prefWidth="200.0" promptText="Ví dụ: đường ABC, ngõ D">
                            <font><Font name="Segoe UI" size="14"/></font>
                        </TextField>

                        <Label layoutX="10.0" layoutY="120.0" prefHeight="28.0" prefWidth="200.0" text="Ngày lập           :">
                            <font><Font name="Segoe UI" size="14"/></font>
                        </Label>
                        <DatePicker fx:id="updateNgayLap" layoutX="230.0" layoutY="120.0" prefHeight="28.0" prefWidth="200.0" />

                        <Label layoutX="10.0" layoutY="160.0" prefHeight="28.0" prefWidth="200.0" text="Ngày chuyển đi :">
                            <font><Font name="Segoe UI" size="14"/></font>
                        </Label>
                        <DatePicker fx:id="updateNgayChuyenDi" layoutX="230.0" layoutY="160.0" prefHeight="28.0" prefWidth="200.0" />

                        <Label layoutX="10.0" layoutY="200.0" prefHeight="28.0" prefWidth="200.0" text="Lý do chuyển    :">
                            <font><Font name="Segoe UI" size="14"/></font>
                        </Label>
                        <TextField fx:id="updateLyDoChuyenText" layoutX="230.0" layoutY="200.0" prefHeight="28.0" prefWidth="200.0" promptText="Ví dụ: Công việc">
                            <font><Font name="Segoe UI" size="14"/></font>
                        </TextField>

                        <Button layoutX="230.0" layoutY="240.0" prefHeight="28.0" prefWidth="200.0" text="Cập nhật hộ khẩu" onAction="#updateHoKhauOnAction"
                                style="-fx-background-color: #5DADE2; -fx-background-radius: 5px;">
                            <cursor><Cursor fx:constant="HAND"/></cursor>
                        </Button>
                    </children>
                </AnchorPane>

            </children>
        </AnchorPane>

    </children>
</AnchorPane>
