<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.LoginController"
            prefWidth="800" prefHeight="400"
            style="-fx-background-color: #f4f7f9;">

    <StackPane layoutX="150" layoutY="50" prefWidth="500" prefHeight="300"
               style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">

        <HBox prefWidth="500" prefHeight="300">

            <!-- Left Logo -->
            <VBox alignment="CENTER" prefWidth="150"
                  style="-fx-background-color: #1874cd; -fx-background-radius: 15 0 0 15;" spacing="10">
                <ImageView fitWidth="100" fitHeight="100" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../image/logo.jpg"/>
                    </image>
                </ImageView>
                <Label text="BLUE MOON" textFill="white" alignment="CENTER">
                    <font>
                        <Font name="Segoe UI Bold" size="20"/>
                    </font>
                </Label>
            </VBox>

            <!-- Right Form -->
            <VBox spacing="15" alignment="TOP_CENTER">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <Label text="LOGIN" textFill="#1874cd">
                    <font>
                        <Font name="Segoe UI Bold" size="28"/>
                    </font>
                </Label>

                <!-- Username -->
                <VBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="Username">
                        <font>
                            <Font name="Segoe UI" size="14"/>
                        </font>
                    </Label>
                    <TextField fx:id="txtUserName" promptText="Enter your username" prefWidth="250" prefHeight="30"/>
                </VBox>

                <!-- Password -->
                <VBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="Password">
                        <font>
                            <Font name="Segoe UI" size="14"/>
                        </font>
                    </Label>

                    <!-- StackPane để overlay TextField/PasswordField + Eye -->
                    <StackPane prefWidth="250" prefHeight="30">

                        <!-- Hide password -->
                        <PasswordField fx:id="txtHidePassword" promptText="Enter password" prefWidth="250" prefHeight="30"
                                       onKeyReleased="#HidePasswordOnAction"/>

                        <!-- Show password -->
                        <TextField fx:id="txtShowPassword" promptText="Enter password" prefWidth="250" prefHeight="30"
                                   onKeyReleased="#ShowPasswordOnAction" visible="false"/>

                        <!-- Eye icon -->
                        <ImageView fx:id="Open_Eye_Icon" fitHeight="20" fitWidth="20"
                                   pickOnBounds="true" preserveRatio="true"
                                   onMouseClicked="#Open_Eye_ClickOnAction"
                                   StackPane.alignment="CENTER_RIGHT" style="-fx-cursor: hand;"
                                   visible="false">
                            <image>
                                <Image url="@../image/showpassword.png"/>
                            </image>
                        </ImageView>

                        <ImageView fx:id="Close_Eye_Icon" fitHeight="20" fitWidth="20"
                                   pickOnBounds="true" preserveRatio="true"
                                   onMouseClicked="#Close_Eye_ClickOnAction"
                                   StackPane.alignment="CENTER_RIGHT" style="-fx-cursor: hand;">
                            <image>
                                <Image url="@../image/hidepassword.png"/>
                            </image>
                        </ImageView>

                    </StackPane>
                </VBox>

                <!-- Login Button -->
                <Button fx:id="loginButton" text="Login" onAction="#CheckLogin"
                        prefWidth="120" prefHeight="30"
                        style="-fx-background-color: #1874cd; -fx-text-fill: white; -fx-background-radius: 5;">
                    <font>
                        <Font name="Segoe UI Bold" size="14"/>
                    </font>
                </Button>

            </VBox>
        </HBox>
    </StackPane>
</AnchorPane>
